{
  "manifest_version": 3,
  "name": "Web Summarizer",
  "version": "1.0",
  "description": "Summarize web pages using AI.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
],

  "action": {
    "default_popup": "popup.html",
    "default_icon":"images/icon128.png"  
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
